{
  "name": "@shoplab-team/shopify-theme-deployment-manager",
  "version": "1.0.0",
  "description": "GitHub Action for Shopify theme deployments with staging, production, and sync capabilities",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.js -o dist --license licenses.txt",
    "watch": "ncc build src/index.js -o dist --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\"",
    "prepare": "husky install",
    "dry-run": "DRY_RUN=true node src/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShopLab-Team/shopify-theme-deployment-manager.git"
  },
  "keywords": [
    "github-action",
    "shopify",
    "theme",
    "deployment",
    "ci-cd"
  ],
  "author": "ShopLab",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/io": "^1.1.3",
    "@octokit/rest": "^20.0.2",
    "axios": "^1.12.0",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "glob": "^10.3.10"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-jest": "^27.6.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
